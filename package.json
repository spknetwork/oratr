{
  "name": "oratr",
  "version": "0.2.0",
  "description": "Oratr - SPK Network Desktop Application for Video transcoding, IPFS storage, and ProofOfAccess node",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron . --no-sandbox --remote-debugging-port=9222",
    "dev": "npm run test:watch",
    "test": "cross-env NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "test:watch": "cross-env NODE_OPTIONS=\"--experimental-vm-modules\" jest --watch",
    "test:coverage": "cross-env NODE_OPTIONS=\"--experimental-vm-modules\" jest --coverage",
    "test:unit": "cross-env NODE_OPTIONS=\"--experimental-vm-modules\" jest --testPathPattern=test/unit",
    "test:integration": "cross-env NODE_OPTIONS=\"--experimental-vm-modules\" jest --testPathPattern=test/integration",
    "test:e2e": "cross-env NODE_OPTIONS=\"--experimental-vm-modules\" jest --testPathPattern=test/e2e --runInBand",
    "lint": "eslint src test --ext .js",
    "lint:fix": "eslint src test --ext .js --fix",
    "install-ffmpeg": "node scripts/install-ffmpeg.js",
    "prebuild": "npm run install-ffmpeg",
    "build": "electron-builder",
    "build:win": "npm run prebuild && electron-builder --win --publish=never",
    "build:mac": "npm run prebuild && electron-builder --mac dmg zip --publish=never",
    "build:linux": "npm run prebuild && electron-builder --linux --publish=never",
    "postinstall": "electron-builder install-app-deps && node scripts/fix-perms.js && node scripts/install-ffmpeg.js"
  },
  "keywords": [
    "oratr",
    "spk",
    "ipfs",
    "video",
    "transcoding",
    "electron",
    "desktop"
  ],
  "author": {
    "name": "Steven Ettinger",
    "email": "steven@disregardfiat.tech"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "chai": "^5.2.1",
    "cross-env": "^10.0.0",
    "electron": "^29.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "sinon": "^21.0.0"
  },
  "optionalDependencies": {
    "dmg-license": "^1.0.11"
  },
  "dependencies": {
    "2": "^3.0.0",
    "@disregardfiat/proofofaccess": "0.4.5",
    "@disregardfiat/spk-js": "^1.0.0",
    "@hiveio/dhive": "^1.3.2",
    "@hiveio/hive-js": "^2.0.8",
    "axios": "^1.6.5",
    "chokidar": "^3.5.3",
    "electron-store": "^8.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "form-data": "^4.0.0",
    "hive-tx": "^4.0.6",
    "ipfs-only-hash": "^4.0.0",
    "kubo-rpc-client": "^3.0.2",
    "p-queue": "^7.4.1",
    "tar": "^6.2.0",
    "unzipper": "^0.10.14",
    "uuid": "^9.0.1",
    "webdav-server": "^2.6.2",
    "which": "^4.0.0",
    "winston": "^3.11.0",
    "verror": "^1.10.0",
    "ws": "^8.18.3"
  },
  "build": {
    "appId": "io.spknetwork.oratr",
    "productName": "Oratr",
    "asarUnpack": [
      "bin/**",
      "node_modules/@disregardfiat/proofofaccess/bin/**"
    ],
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json",
      "bin/**/*",
      "resources/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/@disregardfiat/proofofaccess/bin",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "bin",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.video",
      "icon": "resources/images/icons/mac/icon.icns",
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extendInfo": {
        "NSCameraUsageDescription": "Oratr may access the camera for recording if you enable related features.",
        "NSMicrophoneUsageDescription": "Oratr may access the microphone for recording if you enable related features."
      }
    },
    "win": {
      "icon": "resources/images/icons/win/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "resources/images/icons/png/512x512.png",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Video"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
